{
  "compilerOptions": {
    "target": "ES6",         // Use ES6 for async/await support
    "module": "commonjs",       
    "esModuleInterop": true, // Allow default imports
    "skipLibCheck": true,    // Skip checking library files (useful for node_modules)
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",      // Output directory for compiled files
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
